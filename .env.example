# Variáveis de Ambiente - PredictFinance
# Copie este arquivo para .env e ajuste os valores

# Configurações do Modelo
MODEL_PATH=models/lstm_model.h5
SCALER_PATH=models/scaler.pkl
TICKER=B3SA3.SA
YEARS_OF_DATA=5

# Configurações da API
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# Configurações de Treinamento
BATCH_SIZE=32
EPOCHS=100
TIMESTEPS=60

# Configurações do Ambiente
ENVIRONMENT=development  # development, production

# Google Gemini API (obrigatória para Análise Técnica com IA no Streamlit)
GEMINI_API_KEY=sua_api_key_aqui

# URL da API Backend (opcional, padrão: http://localhost:8000)
API_BASE_URL=http://localhost:8000
# Para produção use: https://b3sa3-api.onrender.com
